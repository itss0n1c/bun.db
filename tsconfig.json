{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"types": ["bun"],
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "dist/",
		"rootDir": "lib/",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"emitDeclarationOnly": true
	},
	"exclude": ["build.ts", "dist/", "node_modules"]
}
