{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "rootDir": "lib/",
    "target": "ESNext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["dist/", "lib/index.test.ts"]
}
